{
  "openapi": "3.0.0",
  "info": {
    "title": "Example API",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://api.example.com/"
    }
  ],
  "paths": {
    "/no-auth": {
      "post": {
        "operationId": "no-auth",
        "responses": {
          "204": {
            "description": "success"
          }
        }
      }
    },
    "/basic": {
      "post": {
        "operationId": "basic-auth",
        "security": [
          {
            "basicAuth": []
          }
        ],
        "responses": {
          "204": {
            "description": "Success"
          }
        }
      }
    },
    "/bearer": {
      "post": {
        "operationId": "bearer-auth",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "204": {
            "description": "Success"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "basicAuth": {
        "type": "http",
        "scheme": "basic"
      },
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}