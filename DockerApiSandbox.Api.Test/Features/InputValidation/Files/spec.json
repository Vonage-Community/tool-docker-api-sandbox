{
  "openapi": "3.0.0",
  "info": {
    "title": "Example API",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://api.example.com/"
    }
  ],
  "paths": {
    "/query": {
      "post": {
        "parameters": [
          {
            "name": "param_1",
            "in": "query",
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "param_2",
            "in": "query",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "order",
            "in": "query",
            "schema": {
              "type": "string",
              "default": "asc",
              "enum": [
                "asc",
                "desc",
                "ASC",
                "DESC"
              ]
            }
          }
        ],
        "operationId": "query-post",
        "responses": {
          "204": {
            "description": "success"
          }
        }
      }
    },
    "/path/{id}": {
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "schema": {
            "type": "string"
          }
        }
      ],
      "post": {
        "operationId": "path-post",
        "responses": {
          "204": {
            "description": "success"
          }
        }
      }
    },
    "/body": {
      "post": {
        "operationId": "body-post",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "required": [
                  "name"
                ],
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "order": {
                    "type": "string",
                    "default": "asc",
                    "enum": [
                      "asc",
                      "desc",
                      "ASC",
                      "DESC"
                    ]
                  },
                  "timeout": {
                    "type": "integer",
                    "minimum": 50,
                    "maximum": 100
                  }
                }
              }
            },
            "application/x-www-form-urlencoded": {
              "schema": {
                "required": [
                  "name"
                ],
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "order": {
                    "type": "string",
                    "default": "asc",
                    "enum": [
                      "asc",
                      "desc",
                      "ASC",
                      "DESC"
                    ]
                  },
                  "timeout": {
                    "type": "integer",
                    "minimum": 50,
                    "maximum": 100
                  }
                }
              }
            }
          }
        },
        "responses": {
          "204": {
            "description": "success"
          }
        }
      }
    },
    "/body/oneOf": {
      "post": {
        "operationId": "body-oneOf-post",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "oneOf": [
                  {
                    "$ref": "#/components/schemas/BaseModelWithNCCO"
                  },
                  {
                    "$ref": "#/components/schemas/BaseModelWithUri"
                  }
                ]
              }
            }
          }
        },
        "responses": {
          "204": {
            "description": "success"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "BaseModelWithNCCO": {
        "type": "object",
        "required": [
          "to",
          "ncco"
        ],
        "properties": {
          "to": {
            "type": "array",
            "items": {
              "oneOf": [
                {
                  "$ref": "#/components/schemas/EndpointPhone"
                },
                {
                  "$ref": "#/components/schemas/EndpointSip"
                }
              ],
              "discriminator": {
                "propertyName": "type",
                "mapping": {
                  "phone": "#/components/schemas/EndpointPhone",
                  "sip": "#/components/schemas/EndpointSip"
                }
              }
            }
          },
          "ncco": {
            "type": "string"
          }
        }
      },
      "BaseModelWithUri": {
        "type": "object",
        "required": [
          "to",
          "uri"
        ],
        "properties": {
          "to": {
            "type": "array",
            "items": {
              "oneOf": [
                {
                  "$ref": "#/components/schemas/EndpointPhone"
                },
                {
                  "$ref": "#/components/schemas/EndpointSip"
                }
              ],
              "discriminator": {
                "propertyName": "type",
                "mapping": {
                  "phone": "#/components/schemas/EndpointPhone",
                  "sip": "#/components/schemas/EndpointSip"
                }
              }
            }
          },
          "uri": {
            "type": "string"
          }
        }
      },
      "EndpointPhone": {
        "type": "object",
        "required": [
          "number",
          "type"
        ],
        "properties": {
          "type": {
            "type": "string",
            "example": "phone"
          },
          "number": {
            "type": "string"
          }
        }
      },
      "EndpointSip": {
        "type": "object",
        "required": [
          "uri",
          "type"
        ],
        "properties": {
          "type": {
            "type": "string",
            "example": "sip"
          },
          "uri": {
            "type": "string"
          }
        }
      }
    }
  }
}